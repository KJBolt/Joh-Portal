<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_applicant_inherit_form" model="ir.ui.view">
            <field name="name">hr.applicant.inherit.form</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='recruitment_contract']" position="after">
                    <group string="Proposals">
                        <group string="Image Proposal">
                            <field name="image_proposal" filename="image_proposal_filename"/>
                            <field name="image_proposal_filename" invisible="1"/>
                        </group>
                        <group string="Video Proposal">
                            <field name="video_proposal_filename" invisible="1"/>
                            <field name="video_proposal" filename="video_proposal_filename"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>