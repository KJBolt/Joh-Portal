<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="all_jobs" name="All Jobs">
        <t t-call="website.layout">
            <t t-if="jobs">
                <div class="oe_structure container">
                    <div class="container" style="margin-top: 40px;">
                        <h4 style="margin-bottom: 0px; font-weight: 700;">Find Your Dream Job</h4>
                        <p>Discover thousands of job opportunities from top companies worldwide</p>
                    </div>

                    <!-- Search Job Bar -->
                    <div class="d-flex justify-content-center">
                        <form action="/jobs" method="get" class="w-100 d-flex gap-2 shadow-sm p-2 rounded bg-white">
                            <!-- Search input -->
                            <div class="input-group flex-grow-1">
                                <!-- <span class="input-group-text bg-white border-0">
                                    <i class="fa fa-search text-muted"></i>
                                </span> -->
                                <input type="text"
                                    name="search"
                                    class="form-control border-0"
                                    placeholder="Search jobs, companies, or keywords..."
                                />
                            </div>

                            <!-- Filters button -->
                            <button type="button" class="btn btn-light border d-flex align-items-center gap-1">
                                <i class="fa fa-filter"></i>
                                Filters
                            </button>

                            <!-- Search button -->
                            <button type="submit" class="btn px-3 text-light" style="background-color: #0a66c2">
                                Search
                            </button>
                        </form>
                    </div>

                    <!-- Job Listings Section -->
                    <div class="container" style="margin-top: 40px;">
                        <div class="row">
                            <!-- Sidebar Filters -->
                            <div class="col-12 col-md-4 col-lg-3 mb-4">
                                <div style="background: #fff; border-radius: 18px; box-shadow: 0 2px 16px rgba(79,70,229,0.06); padding: 28px 22px;">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h6 style="font-weight: 500; color: #22223b; margin-bottom: 0;">Filters</h6>
                                        <a href="#" style="color: #0a66c2; font-size: 0.80rem; font-weight: 500; text-decoration: none;">Reset All</a>
                                    </div>
                                    <!-- Job Type -->
                                    <div class="mb-4">
                                        <div style="font-size: 0.98rem; font-weight: 600; color: #64748b; margin-bottom: 10px;">JOB TYPE</div>
                                        <div class="form-check mb-2">
                                            <input class="form-check-input" type="checkbox" id="fulltime" checked="checked"/>
                                            <label class="form-check-label" for="fulltime" style="font-weight: 500;">Full-time</label>
                                            <span style="float: right; color: #94a3b8; font-size: 0.95rem;">124</span>
                                        </div>
                                        <div class="form-check mb-2">
                                            <input class="form-check-input" type="checkbox" id="contract"/>
                                            <label class="form-check-label" for="contract" style="font-weight: 500;">Contract</label>
                                            <span style="float: right; color: #94a3b8; font-size: 0.95rem;">42</span>
                                        </div>
                                        <div class="form-check mb-2">
                                            <input class="form-check-input" type="checkbox" id="parttime"/>
                                            <label class="form-check-label" for="parttime" style="font-weight: 500;">Part-time</label>
                                            <span style="float: right; color: #94a3b8; font-size: 0.95rem;">18</span>
                                        </div>
                                    </div>
                                    <!-- Salary Range -->
                                    <div class="mb-4">
                                        <div style="font-size: 0.98rem; font-weight: 600; color: #64748b; margin-bottom: 10px;">SALARY RANGE</div>
                                        <div style="margin-bottom: 8px;">
                                            <input type="range" min="50000" max="200000" value="125000" style="width: 100%; accent-color: #0a66c2"/>
                                        </div>
                                        <div class="d-flex justify-content-between" style="font-size: 0.97rem; color: #22223b;">
                                            <span>$50k</span>
                                            <span>$200k+</span>
                                        </div>
                                    </div>
                                    <!-- Experience Level -->
                                    <div>
                                        <div style="font-size: 0.98rem; font-weight: 600; color: #64748b; margin-bottom: 10px;">EXPERIENCE LEVEL</div>
                                        <div class="form-check mb-2">
                                            <input class="form-check-input" type="checkbox" id="entry"/>
                                            <label class="form-check-label" for="entry" style="font-weight: 500;">Entry Level</label>
                                        </div>
                                        <div class="form-check mb-2">
                                            <input class="form-check-input" type="checkbox" id="mid" checked="checked"/>
                                            <label class="form-check-label" for="mid" style="font-weight: 500;">Mid Level</label>
                                        </div>
                                        <div class="form-check mb-2">
                                            <input class="form-check-input" type="checkbox" id="senior"/>
                                            <label class="form-check-label" for="senior" style="font-weight: 500;">Senior Level</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Job Listings -->
                            <div class="col-12 col-md-8 col-lg-9">
                                <!-- Showing Jobs -->
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <div style="font-size: 1.15rem; font-weight: 600; color: #22223b;">
                                        Showing <span style="color: #0a66c2; font-weight: 700;">100</span> Jobs
                                    </div>
                                    <div class="d-flex align-items-center" style="gap: 8px;">
                                        <span style="color: #64748b; font-size: 0.98rem; font-weight: 500;">Sort by:</span>
                                        <select class="form-select" style="width: 160px; font-weight: 600; border-radius: 10px; background: #fff; border: 1.5px solid #e5e7eb; color: #22223b;">
                                            <option selected="selected">Most Relevant</option>
                                            <option>Newest</option>
                                            <option>Highest Salary</option>
                                        </select>
                                    </div>
                                </div>

                                <!-- Job Card 1 - UX/UI Designer -->
                                <t t-foreach="jobs" t-as="job">
                                    <div class="card mb-3 shadow-sm border-0" style="border-radius: 8px;">
                                        <div class="card-body p-4">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div class="d-flex gap-3 flex-grow-1">
                                                    <!-- Job Details -->
                                                    <div class="flex-grow-1">
                                                        <h5 class="mb-1" style="font-weight: 600;"> <t t-esc="job.name" /></h5>
                                                        <p class="text-primary mb-2" style="font-size: 14px;"> <t t-esc="job.company" /></p>
                                                        <!-- Job Meta Info -->
                                                        <div class="d-flex gap-3 mb-0" style="font-size: 13px; color: #6c757d;">
                                                            <span><i class="fa fa-map-marker"></i> <t t-esc="job.address_id.name" /></span>
                                                            <span><i class="fa fa-clock-o"></i> <t t-esc="job.contract_type_id.name" /></span>
                                                            <span><i class="fa fa-money"></i> <t t-esc="job.salary" /></span>
                                                        </div>
                                                        <!-- Job Description -->
                                                        <div class="mb-3" 
                                                            style="font-size: 14px; color:#495057; display:-webkit-box; -webkit-line-clamp:2; -webkit-box-orient:vertical; overflow:hidden; line-height:1.5;">
                                                            <t t-esc="job.description"/>
                                                        </div>
                                                        <!-- Tags -->
                                                        <div class="d-flex gap-2 mb-3 flex-wrap">
                                                            <t t-foreach="job.benefit_ids" t-as="benefit">
                                                                <span class="badge" style="background-color: #e7f3ff; color: #667eea; font-weight: normal; padding: 6px 12px; border-radius: 4px;">
                                                                    <t t-esc="benefit.name"/>
                                                                </span>
                                                            </t>
                                                        </div>
                                                        <!-- Footer Info -->
                                                        <div class="d-flex gap-3" style="font-size: 13px; color: #6c757d;">
                                                            <span><t t-esc="job.create_date" t-options="{'widget': 'date', 'format': 'MMM dd, yyyy'}" /></span>
                                                            <span><i class="fa fa-user"></i> <t t-esc="job.all_application_count" /> applicants</span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- Right Side Actions -->
                                                <div style="flex-shrink: 0;">
                                                    <a t-attf-href="/job-details-new/{{job.id}}" class="btn px-4 text-light" style="border-radius: 6px; font-weight: 500; text-decoration: none !important; color: white !important; background-color: #0a66c2; white-space: nowrap;">View Details</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
            <t t-else="">
                <div class="oe_structure container">
                    <div class="container" style="margin-top: 40px;">
                        <h4 style="margin-bottom: 0px">No Jobs Found</h4>
                        <p>Oops something went wrong. Please try again later. </p>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>