<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="stepper_profile_1" name="Stepper Profile 1">
        <t t-call="website.layout">
            <!-- Header -->
            <div class="text-center" style="padding: 40px 0 30px; background-color: #fff; border-bottom: 1px solid #e0e0e0;">
                <h1 style="font-size: 32px; font-weight: 600; color: #1a1a1a; margin-bottom: 10px;">Complete Your Profile</h1>
                <p style="font-size: 16px; color: #666; margin: 0;">Set up your professional profile to start receiving job opportunities</p>
            </div>
            
            <!-- Step Indicator -->
            <div class="d-flex justify-content-center align-items-center" style="padding: 40px 0; background-color: #f8f9fa;">
                <div class="d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; border-radius: 50%; font-weight: 600; font-size: 16px; background-color: #e0e0e0; color: #999;">1</div>
                <div style="width: 80px; height: 2px; background-color: #e0e0e0; margin: 0 10px;"></div>
                <div class="d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; border-radius: 50%; font-weight: 600; font-size: 16px; background-color: #2563eb; color: white;">2</div>
                <div style="width: 80px; height: 2px; background-color: #e0e0e0; margin: 0 10px;"></div>
                <div class="d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; border-radius: 50%; font-weight: 600; font-size: 16px; background-color: #e0e0e0; color: #999;">3</div>
            </div>
            
            <!-- Form Container -->
            <div class="oe_structure container" style="max-width: 800px; margin: 0 auto; padding: 40px 20px;">
                <div class="card border-0 shadow-sm" style="border-radius: 8px; padding: 40px;">
                    <h2 style="font-size: 24px; font-weight: 600; color: #1a1a1a; margin-bottom: 30px;">Professional Information</h2>
                    
                    <!-- Success/Error message display -->
                    <t t-if="success">
                        <div class="alert alert-success" role="alert">
                            <t t-esc="success"/>
                        </div>
                    </t>
                    <t t-if="error">
                        <div class="alert alert-danger" role="alert">
                            <t t-esc="error"/>
                        </div>
                    </t>
                    
                    <form action="/stepper_profile_1/submit" method="post">
                        <!-- Professional Title -->
                        <div class="mb-3">
                            <label for="professional_title" class="form-label" style="font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 8px;">Professional Title</label>
                            <input type="text" 
                                class="form-control" 
                                id="professional_title" 
                                name="professional_title" 
                                placeholder="Eg. Software Engineer"
                                style="border-radius: 8px; padding: 10px 14px; border: 1px solid #dee2e6; font-size: 14px;"
                            />
                        </div>


                        <div class="row">
                            <!-- Experience Level -->
                            <div class="col-md-6 mb-3">
                                <label for="experience_level" class="form-label" style="font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 8px;">Experience (Years)</label>
                                <input type="text" 
                                    class="form-control" 
                                    id="experience_level" 
                                    name="experience_level" 
                                    placeholder="Eg. 3"
                                    style="border-radius: 8px; padding: 10px 14px; border: 1px solid #dee2e6; font-size: 14px;"
                                />
                            </div>
                            
                            <!-- Availability -->
                            <div class="col-md-6 mb-3">
                                <label for="availability" class="form-label" style="font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 8px;">Availability</label>
                                <select class="form-select" id="availability" name="availability" style="border-radius: 8px; padding: 10px 14px; border: 1px solid #dee2e6; font-size: 14px;">
                                    <option value="" disabled="disabled">Select Availability</option>
                                    <option value="available">Available</option>
                                    <option value="busy">Busy</option>
                                </select>
                            </div>
                        </div>


                        <div class="row">
                            <!-- Preferred Job Type -->
                            <div class="col-md-6 mb-3">
                                <label for="preferred_job_type" class="form-label" style="font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 8px;">Preferred Job Type</label>
                                <select class="form-select" id="preferred_job_type" name="preferred_job_type" style="border-radius: 8px; padding: 10px 14px; border: 1px solid #dee2e6; font-size: 14px;">
                                    <option value="" disabled="disabled">Select Job Type</option>
                                    <option value="remote">Remote</option>
                                    <option value="onsite">On-site</option>
                                </select>
                            </div>
                            
                            <!-- Job Category -->
                            <div class="col-md-6 mb-3">
                                <label for="job_category_id" class="form-label" style="font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 8px;">Job Category</label>
                                <input type="text" 
                                    class="form-control" 
                                    id="job_category_id" 
                                    name="job_category_id" 
                                    style="border-radius: 8px; padding: 10px 14px; border: 1px solid #dee2e6; font-size: 14px;"
                                />
                            </div>
                        </div>

                        <!-- Skills -->
                        <div class="mb-3">
                            <label class="form-label" style="font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 8px;">Skills</label>
                            <input type="text" 
                                class="form-control" 
                                id="skills-input" 
                                name="skills_ids" 
                                style="border-radius: 8px; padding: 10px 14px; border: 1px solid #dee2e6; font-size: 14px;"
                            />
                        </div>

                        <!-- Hourly Rate -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="hourly_rate" class="form-label" style="font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 8px;">Hourly Rate</label>
                                <input type="text" 
                                    class="form-control" 
                                    id="hourly_rate" 
                                    name="hourly_rate" 
                                    style="border-radius: 8px; padding: 10px 14px; border: 1px solid #dee2e6; font-size: 14px;"
                                />
                            </div>
                        </div>

                        <!-- Professional Description -->
                        <div class="mb-3">
                            <label for="professional_description" class="form-label" style="font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 8px;">Professional Description</label>
                            <textarea class="form-control" 
                                id="professional_description" 
                                name="professional_description" 
                                style="border-radius: 8px; padding: 10px 14px; border: 1px solid #dee2e6; font-size: 14px;"
                            ></textarea>
                        </div>

                        
                        <!-- Certification -->
                        <div class="mb-3">
                            <label for="certification" class="form-label" style="font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 8px;">Certification</label>
                            <input type="text" 
                                class="form-control" 
                                id="certification" 
                                name="certification" 
                                style="border-radius: 8px; padding: 10px 14px; border: 1px solid #dee2e6; font-size: 14px;"
                            />
                        </div>

                        
                        <!-- Next Button -->
                        <div class="d-flex justify-content-between" style="margin-top: 40px;">
                            <a t-attf-href="/stepper_profile" style="background: transparent; border: none; color: #6b7280; font-size: 14px; font-weight: 500; padding: 10px 20px; text-decoration: none;">Back</a>
                            <button type="submit" class="btn btn-primary text-light" style="background-color: #667eea; border: none; border-radius: 8px; padding: 10px 24px; font-size: 14px; font-weight: 600;">
                                Next <i class="fa fa-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>
