<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="job_details_new" name="job_details_new">
        <t t-call="website.layout">
            <t t-set="head_title"><t t-esc="job.name"/></t>
            <t t-if="job">
                <div class="oe_structure container" style="margin-top: 40px; margin-bottom: 60px;">
                    <!-- Job Details -->
                    <div class="col-12 mb-4">
                        <!-- Job Header -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h2 style="font-size: 28px; font-weight: 600; color: #1a1a1a; margin-bottom: 8px;">
                                        <t t-esc="job.name"/>
                                    </h2>
                                </div>
                                <div class="text-end">
                                    <h3 style="font-size: 24px; font-weight: 700; color: #1a1a1a; margin: 0;">
                                        GHS <t t-esc="job.salary"/>
                                    </h3>
                                    <p style="font-size: 13px; color: #6c757d; margin: 0;">Project Budget</p>
                                </div>
                            </div>

                            <!-- Meta Info -->
                            <div class="d-flex gap-3 flex-wrap" style="font-size: 14px; color: #6c757d; margin-bottom: 16px;">
                                <span t-if="job.department_id.name">
                                    <i class="fa fa-briefcase" style="margin-right: 6px;"></i>
                                    <t t-esc="job.department_id.name"/>
                                </span>
                                <span t-if="job.address_id.city">
                                    <i class="fa fa-map-marker" style="margin-right: 6px;"></i>
                                    <t t-esc="job.address_id.city"/>
                                </span>
                                <span>
                                    <i class="fa fa-clock-o" style="margin-right: 6px;"></i>
                                    Posted <t t-esc="job.create_date" t-options="{'widget': 'date', 'format': 'MMM dd, yyyy'}" />
                                </span>
                                <span t-if="job.all_application_count">
                                    <i class="fa fa-user" style="margin-right: 6px;"></i>
                                    <t t-esc="job.all_application_count"/> proposals
                                </span>
                            </div>
                        </div>

                        <!-- Project Details Grid -->
                        <div class="row mb-4">
                            <div class="col-md-4 mb-3">
                                <div style="background-color: #f8f9fa; padding: 16px; border-radius: 8px;">
                                    <p style="font-size: 13px; color: #6c757d; margin: 0 0 4px 0; font-weight: 500;">Project Type</p>
                                    <p style="font-size: 15px; color: #1a1a1a; margin: 0; font-weight: 600;"><t t-esc="job.contract_type_id.name or 'Fixed Price'"/></p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div style="background-color: #f8f9fa; padding: 16px; border-radius: 8px;">
                                    <p style="font-size: 13px; color: #6c757d; margin: 0 0 4px 0; font-weight: 500;">Experience Level</p>
                                    <p style="font-size: 15px; color: #1a1a1a; margin: 0; font-weight: 600;"><t t-esc="job.experience_level" /></p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div style="background-color: #f8f9fa; padding: 16px; border-radius: 8px;">
                                    <p style="font-size: 13px; color: #6c757d; margin: 0 0 4px 0; font-weight: 500;">Timeline</p>
                                    <p style="font-size: 15px; color: #1a1a1a; margin: 0; font-weight: 600;">3-5 days</p>
                                </div>
                            </div>
                        </div>

                        <!-- Project Description -->
                        <div class="mb-4">
                            <h5 style="font-size: 18px; font-weight: 600; color: #1a1a1a; margin-bottom: 12px;">Project Description</h5>
                            <p style="color: #677081ff !important; line-height: 1.8; margin: 0; font-size: 12px;">
                                <t t-out="job.description"/>
                            </p>
                        </div>

                        <!-- Requirements -->
                        <div class="mb-4" t-if="job.requirement_ids">
                            <h5 style="font-size: 18px; font-weight: 600; color: #1a1a1a; margin-bottom: 12px;">Requirements</h5>
                            <div style="color: #4a5568; line-height: 1.8; font-size: 14px;">
                                <ul style="padding-left: 20px;">
                                    <t t-foreach="job.requirement_ids" t-as="requirement">
                                        <li style="margin-bottom: 8px;">
                                            <t t-esc="requirement.name"/>
                                        </li>
                                    </t>
                                </ul>
                            </div>
                        </div>

                        <!-- Required Skills -->
                        <div t-if="job.benefit_ids" class="mb-4">
                            <h5 style="font-size: 18px; font-weight: 600; color: #1a1a1a; margin-bottom: 12px;">Perks</h5>
                            <div class="d-flex gap-2 flex-wrap">
                                <t t-foreach="job.benefit_ids" t-as="benefit">
                                    <span class="badge" style="background-color: #e7f3ff; color: #667eea; font-weight: 500; padding: 8px 16px; border-radius: 6px; font-size: 13px;">
                                        <t t-esc="benefit.name"/>
                                    </span>
                                </t>
                            </div>
                        </div>

                        <!-- Action Button -->
                        <div class="mt-4">
                            <a t-attf-href="/apply-job/{{job.id}}" 
                                class="btn btn-primary text-light" 
                                style="border-radius: 8px; padding: 14px 32px; font-weight: 600; background-color: #667eea; border: none; width: 100%; color: white !important; text-decoration: none !important; font-size: 16px;">
                                <i class="fa fa-paper-plane" style="margin-right: 8px;"></i>Submit Proposal
                            </a>
                        </div>
                    </div>
                </div>
            </t>
            <t t-else="">
                <div class="oe_structure container">
                    <div class="container" style="margin-top: 40px;">
                        <h4 style="margin-bottom: 0px">No Job Found</h4>
                        <p>Oops something went wrong. Please try again later.</p>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>