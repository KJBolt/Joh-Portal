<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="stepper_profile" name="Stepper Profile">
        <t t-call="website.layout">
            <!-- Header -->
            <div class="text-center" style="padding: 40px 0 30px; background-color: #fff; border-bottom: 1px solid #e0e0e0;">
                <h1 style="font-size: 32px; font-weight: 600; color: #1a1a1a; margin-bottom: 10px;">Complete Your Profile</h1>
                <p style="font-size: 16px; color: #666; margin: 0;">Set up your professional profile to start receiving job opportunities</p>
            </div>
            
            <!-- Step Indicator -->
            <div class="d-flex justify-content-center align-items-center" style="padding: 40px 0; background-color: #f8f9fa;">
                <div class="d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; border-radius: 50%; font-weight: 600; font-size: 16px; background-color: #2563eb; color: white;">1</div>
                <div style="width: 80px; height: 2px; background-color: #e0e0e0; margin: 0 10px;"></div>
                <div class="d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; border-radius: 50%; font-weight: 600; font-size: 16px; background-color: #e0e0e0; color: #999;">2</div>
                <div style="width: 80px; height: 2px; background-color: #e0e0e0; margin: 0 10px;"></div>
                <div class="d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; border-radius: 50%; font-weight: 600; font-size: 16px; background-color: #e0e0e0; color: #999;">3</div>
            </div>
            
            <!-- Form Container -->
            <div class="oe_structure container" style="max-width: 800px; margin: 0 auto; padding: 40px 20px;">
                <div class="card border-0 shadow-sm" style="border-radius: 8px; padding: 40px;">
                    <h2 style="font-size: 24px; font-weight: 600; color: #1a1a1a; margin-bottom: 30px;">Basic Information</h2>
                    
                    <!-- Success/Error message display -->
                    <t t-if="success">
                        <div class="alert alert-success" role="alert">
                            <t t-esc="success"/>
                        </div>
                    </t>
                    <t t-if="error">
                        <div class="alert alert-danger" role="alert">
                            <t t-esc="error"/>
                        </div>
                    </t>
                    
                    <form action="/stepper_profile/submit" method="post">
                        <div class="row">
                            <!-- First Name -->
                            <div class="col-md-6 mb-3">
                                <label for="first_name" class="form-label" style="font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 8px;">First Name</label>
                                <input type="text" 
                                    class="form-control" 
                                    id="first_name" 
                                    name="first_name" 
                                    style="border-radius: 8px; padding: 10px 14px; border: 1px solid #dee2e6; font-size: 14px;"
                                    t-att-value="request.env.user.name.split(' ')[0] if request.env.user.name else ''"
                                />
                            </div>
                            
                            <!-- Last Name -->
                            <div class="col-md-6 mb-3">
                                <label for="last_name" class="form-label" style="font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 8px;">Last Name</label>
                                <input type="text" 
                                    class="form-control" 
                                    id="last_name" 
                                    name="last_name" 
                                    style="border-radius: 8px; padding: 10px 14px; border: 1px solid #dee2e6; font-size: 14px;"
                                    t-att-value="' '.join(request.env.user.name.split(' ')[1:]) if request.env.user.name and len(request.env.user.name.split(' ')) > 1 else ''"
                                />
                            </div>
                        </div>
                        
                        <div class="row">
                            <!-- Email Address -->
                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label" style="font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 8px;">Email Address</label>
                                <input type="email" 
                                    class="form-control" 
                                    id="email" 
                                    name="email" 
                                    style="border-radius: 8px; padding: 10px 14px; border: 1px solid #dee2e6; font-size: 14px; background-color: #f8f9fa;"
                                    t-att-value="request.env.user.email or ''"
                                />
                            </div>
                            
                            <!-- Phone Number -->
                            <div class="col-md-6 mb-3">
                                <label for="phone_no" class="form-label" style="font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 8px;">Phone Number</label>
                                <input type="tel" 
                                    class="form-control" 
                                    id="phone_no" 
                                    name="phone_no" 
                                    style="border-radius: 8px; padding: 10px 14px; border: 1px solid #dee2e6; font-size: 14px;"
                                    t-att-value="request.env.user.phone or ''"
                                />
                            </div>
                        </div>

                        <!-- Profile Photo -->
                        <div class="mb-3">
                            <label for="profile_photo" class="form-label" style="font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 8px;">Profile Photo</label>
                            <input type="file" 
                                class="form-control" 
                                id="profile_photo" 
                                name="profile_photo" 
                                style="border-radius: 8px; padding: 10px 14px; border: 1px solid #dee2e6; font-size: 14px;"
                            />
                        </div>

                        <!-- About Me -->
                        <div class="mb-3">
                            <label for="about_me" class="form-label" style="font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 8px;">About Me</label>
                            <textarea class="form-control" 
                                id="about_me" 
                                name="about_me" 
                                style="border-radius: 8px; padding: 10px 14px; border: 1px solid #dee2e6; font-size: 14px;"
                            ></textarea>
                        </div>
                        
                        <!-- Location -->
                        <div class="mb-3">
                            <label for="location" class="form-label" style="font-size: 14px; font-weight: 500; color: #374151; margin-bottom: 8px;">Location (City, State)</label>
                            <input type="text" 
                                class="form-control" 
                                id="location" 
                                name="location" 
                                style="border-radius: 8px; padding: 10px 14px; border: 1px solid #dee2e6; font-size: 14px;"
                            />
                        </div>
                        
                        <!-- Next Button -->
                        <div class="d-flex justify-content-between" style="margin-top: 40px;">
                            <div></div>
                            <button type="submit" class="btn btn-primary text-light" style="background-color: #667eea; border: none; border-radius: 8px; padding: 10px 24px; font-size: 14px; font-weight: 600;">
                                Next <i class="fa fa-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>