<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="home" name="Job Portal Home">
        <t t-call="website.layout">
            <t t-set="head_title">Home</t>
            <!-- Hero Section -->
            <div class="oe_structure" style="background: linear-gradient(135deg, #f8fafc 0%, #eef2f7 100%); padding: 100px 0 60px 0; position: relative;">
                <div class="container" style="position: relative; z-index: 1;">
                    <div class="row align-items-center">
                        <div class="col-lg-10 mx-auto text-center">
                            <div style="margin-bottom: 18px;">
                                <span style="background: #e0e7ff; color: #0a66c2; font-weight: 600; border-radius: 20px; padding: 6px 18px; font-size: 0.95rem; box-shadow: 0 2px 8px rgba(79,70,229,0.08);">
                                    NEW JOBS ADDED DAILY
                                </span>
                            </div>
                            <h1 class="mb-4 display-md-3 display-4" style="color: #22223b; font-weight: 700;">
                                Find your next<br/>
                                <span style="background: linear-gradient(90deg, #0a66c2 40%, #2ecc71 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
                                    dream career
                                </span>
                            </h1>
                            <p class="lead mb-5" style="color: #4b5563; opacity: 0.95; font-size: 1.15rem;">
                                Connecting the world’s best talent with top-tier companies.<br/>
                                Start your search for the perfect role today.
                            </p>
                            <!-- Search Box -->
                            <div class="card border-0 shadow-lg mb-4" style="border-radius: 18px; padding: 12px; max-width: 700px; margin: 0 auto 30px auto; background: #fff;">
                                <form action="/all-jobs" method="get" class="row gx-3 align-items-center">
                                    <div class="col-md-5 col-12 mb-2 mb-md-0">
                                        <input 
                                            type="text" 
                                            name="search" 
                                            placeholder="Job title, keywords, or company" 
                                            class="form-control border-0" 
                                            style="padding: 16px 14px; font-size: 16px; box-shadow: none; background: #f3f4f6; border-radius: 12px;"
                                            t-att-value="search_query"
                                        />
                                    </div>
                                    <div class="col-md-5 col-12 mb-2 mb-md-0">
                                        <input 
                                            type="text" 
                                            name="location" 
                                            placeholder="City, state, or 'Remote'" 
                                            class="form-control border-0" 
                                            style="padding: 16px 14px; font-size: 16px; box-shadow: none; background: #f3f4f6; border-radius: 12px;"
                                            t-att-value="location_query"
                                        />
                                    </div>
                                    <div class="col-md-2 col-12">
                                        <button type="submit" class="btn w-100" style="background: #0a66c2; color: white; border: none; padding: 16px 0; border-radius: 12px; font-weight: 600; font-size: 1.1rem;">
                                            Search
                                        </button>
                                    </div>
                                </form>
                            </div>
                            <!-- Trending Tags -->
                            <!-- <div class="d-flex justify-content-center gap-2 mb-4" style="flex-wrap: wrap;">
                                <span style="background: #f3f4f6; color: #0a66c2; border-radius: 16px; padding: 7px 18px; font-size: 0.98rem; margin: 2px; font-weight: 500; cursor: pointer;">Software Engineer</span>
                                <span style="background: #f3f4f6; color: #0a66c2; border-radius: 16px; padding: 7px 18px; font-size: 0.98rem; margin: 2px; font-weight: 500; cursor: pointer;">Product Manager</span>
                                <span style="background: #f3f4f6; color: #0a66c2; border-radius: 16px; padding: 7px 18px; font-size: 0.98rem; margin: 2px; font-weight: 500; cursor: pointer;">UI/UX Design</span>
                            </div> -->
                        </div>
                    </div>
                </div>
            </div>


            <!-- Popular Categories -->
            <div class="oe_structure" style="padding: 60px 0;">
                <div class="container">
                    <div class="d-flex flex-md-row flex-column justify-content-md-start justify-content-md-between align-items-start align-items-md-center mb-2">
                        <div class="mb-3 mb-md-0">
                            <h2 style="font-size: 1.5rem; font-weight: 700; color: #22223b;">Popular Categories</h2>
                            <div style="color: #64748b; font-size: 1rem; margin-top: 2px;">Explore the most trending job roles</div>
                        </div>
                        <div>
                            <!-- <a href="/categories" style="color: #0a66c2; font-weight: 500; font-size: 1rem; text-decoration: none;">
                                View all categories <i class="fa fa-arrow-right" style="font-size: 0.95rem;"></i>
                            </a> -->
                        </div>
                    </div>
                    <t t-if="departments">
                        <div class="row justify-content-start mt-4">
                            <t t-foreach="departments" t-as="department">
                                <div class="col-12 col-sm-6 col-md-3 mb-4">
                                    <div style="background: #fff; border-radius: 18px; box-shadow: 0 2px 16px rgba(79,70,229,0.06); padding: 32px 0; text-align: center;">
                                        <div style="width: 48px; height: 48px; border-radius: 12px; background: #f3f4f6; display: flex; align-items: center; justify-content: center; margin: 0 auto 18px auto;">
                                            <i class="fa fa-briefcase" style="color: #64748b; font-size: 1.5rem;"></i>
                                        </div>
                                        <div style="font-size: 1.08rem; font-weight: 600; color: #22223b;">
                                            <t t-esc="department['name']"/>
                                        </div>
                                        <div style="color: #64748b; font-size: 0.98rem; margin-top: 6px;">
                                            <t t-esc="department['job_count']"/> open positions
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </t>
                    <t t-else="">
                        <div class="text-center">
                            <p class="fs-5 fw-semibold text-center">No categories found</p>
                        </div>
                    </t>
                </div>
            </div>


            <!-- Featured Jobs Section -->
            <div class="oe_structure container" style="padding: 60px 0;">
                <div class="d-flex flex-md-row flex-column justify-content-md-start justify-content-md-between align-items-md-center mb-2 p-3">
                    <div class="mb-3 mb-md-0">
                        <h2 style="font-size: 1.5rem; font-weight: 700; color: #22223b; margin-bottom: 0;">Featured Jobs</h2>
                        <div style="color: #64748b; font-size: 1rem; margin-top: 2px;">Latest opportunities from top rated companies</div>
                    </div>
                    <div></div>
                </div>
                <div class="row justify-content-center">
                    <div>
                        <div style="background: #fff; border-radius: 18px; box-shadow: 0 2px 16px rgba(79,70,229,0.06); padding: 0;">
                            <!-- Job Card 1 -->
                            <t t-if="jobs">
                                <div t-foreach="jobs" t-as="job">
                                    <a t-attf-href="/job-details-new/{{job.id}}" class="d-flex flex-md-row flex-column justify-content-start justify-content-md-between text-decoration-none align-items-start align-items-md-center cursor-pointer" style="padding: 28px 32px; border-bottom: 1px solid #f3f4f6;">
                                        <div class="d-flex flex-md-row flex-column justify-content-md-center justify-content-start align-items-md-center align-items-start gap-3">
                                            <div style="width: 48px; height: 48px; border-radius: 12px; background: #eef2ff; display: flex; align-items: center; justify-content: center;">
                                                <i class="fa fa-cube" style="color: #64748b; font-size: 1.6rem;"></i>
                                            </div>
                                            <div class="mb-2 mb-md-0">
                                                <div style="font-size: 1.15rem; font-weight: 600; color: #22223b;"><t t-esc="job.name"/></div>
                                                <!-- Example replacement in job details -->
                                                <div style="color: #64748b; font-size: 0.98rem;">
                                                    <div style="color: #64748b; font-size: 0.98rem;">
                                                        <t t-if="job.company"><t t-esc="job.company"/></t>
                                                        <t t-if="job.company and job.address_id.name"> • </t>
                                                        <t t-if="job.address_id.name"><t t-esc="job.address_id.name"/></t>
                                                        <t t-if="(job.company or job.address_id.name) and job.contract_type_id.name"> • </t>
                                                        <t t-if="job.contract_type_id.name"><t t-esc="job.contract_type_id.name"/></t>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-md-center align-items-start gap-md-3 gap-2">
                                            <div class="text-start">
                                                <div style="font-size: 1.08rem; font-weight: 600; color: #22223b;">
                                                    <div t-if="job.salary != 'Negotiable'">
                                                        GHS <t t-esc="job.salary"/>
                                                    </div>
                                                    <div t-else="">
                                                        <t t-esc="job.salary"/>
                                                    </div>
                                                </div>
                                                <div style="color: #22c55e; font-size: 0.95rem;"><t t-esc="job.create_date" t-options="{'widget': 'date', 'format': 'MMM dd, yyyy'}"/></div>
                                            </div>
                                            <div></div>
                                        </div>
                                    </a>
                                </div>
                            </t>
                            <t t-else="">
                                <div class="text-center py-5">
                                    <p class="fs-5 fw-semibold text-center">No jobs found</p>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <a href="/all-jobs" class="btn btn-light btn-lg" style="padding: 13px 54px; border-radius: 10px; background: #0a66c2; color: white; font-weight: 600; border: none; box-shadow: 0 2px 8px rgba(79,70,229,0.06);">
                        View All Jobs
                    </a>
                </div>
            </div>


            <!-- CTA Section -->
            <div class="oe_structure container" style="padding: 100px 0;">
                <div class="row justify-content-center">
                    <div>
                        <div style="background: #fff; border-radius: 24px; box-shadow: 0 4px 24px rgba(79,70,229,0.08); display: flex; flex-wrap: wrap; overflow: hidden;">
                            <!-- Left Side: Text & Buttons -->
                            <div class="d-flex flex-column justify-content-center align-items-start p-5" style="flex: 1 1 320px; min-width: 320px;">
                                <span style="background: #e0e7ff; color: #0a66c2; font-weight: 600; border-radius: 16px; padding: 5px 16px; font-size: 0.95rem; margin-bottom: 18px;">
                                    FOR EMPLOYERS
                                </span>
                                <h3 style="font-size: 2rem; font-weight: 700; color: #22223b; margin-bottom: 14px;">
                                    Are you ready to hire your next skilled professional?
                                </h3>
                                <div style="color: #64748b; font-size: 1.08rem; margin-bottom: 28px;">
                                    Post your job openings and reach millions of qualified candidates in minutes.
                                </div>
                                <div class="d-flex flex-md-row flex-column gap-3">
                                    <t t-if="request.env.user.has_group('base.group_user')">
                                        <a href="/web/login?redirect=/web#action=235&amp;model=hr.job&amp;view_type=kanban&amp;cids=1&amp;menu_id=165" 
                                            class="btn" 
                                            target="_blank" 
                                            rel="noopener noreferrer"
                                            style="background: #0a66c2; color: #fff; font-weight: 600; border-radius: 10px; padding: 13px 28px; font-size: 1rem; box-shadow: 0 2px 8px rgba(37,99,235,0.08);">
                                            Post a Job for Free
                                        </a>
                                    </t>
                                    <t t-else="">
                                        <a href="/web/login?redirect=/web" 
                                            class="btn" 
                                            style="background: #0a66c2; color: #fff; font-weight: 600; border-radius: 10px; padding: 13px 28px; font-size: 1rem; box-shadow: 0 2px 8px rgba(37,99,235,0.08);">
                                            Post a Job for Free
                                        </a>
                                    </t>
                                    <a href="/contactus" class="btn" style="background: #fff; color: #22223b; font-weight: 600; border-radius: 10px; padding: 13px 28px; font-size: 1rem; border: 1.5px solid #e5e7eb;">
                                        Contact Us
                                    </a>
                                </div>
                            </div>
                            <!-- Right Side: Image -->
                            <div class="p-3 p-md-0" style="flex: 1 1 320px; background: #f8fafc; display: flex; align-items: center; justify-content: center;">
                                <img src="/job_portal/static/src/img/hired.jpg" alt="Office Desk" style="width: 100%; height: 100%; object-fit: cover; min-height: 220px;"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>